                option(value='WI') Wisconsin
                option(value='WY') Wyoming
        .form-group-sm.col-md-4
            // ZIP Code
            label.lb-sm.control-label(for='client_zip') ZIP Code *
            input#client_zip.form-control(name='client_zip', type='text', required='required', value=client.client_zip)
    .row
        .form-group-sm.col-md-6
            // Cell Phone
            label.lb-sm.control-label(for='client_cellphone') Cell Phone #
            .input-group
                span.input-group-addon
                    i.fa.fa-phone.fa
                input#client_cellphone.form-control(name='client_cellphone', type='tel', value=client.client_cellphone, placeholder='(XXX) XXX-XXXX')
                
        .form-group-sm.col-md-6
            // Home Phone
            label.lb-sm.control-label(for='client_homephone') Home Phone #
            .input-group
                span.input-group-addon
                    i.fa.fa-phone.fa
                input#client_homephone.form-control(name='client_homephone', type='tel', value=client.client_homephone, placeholder='(XXX) XXX-XXXX')
    .row
        .form-group-sm.col-md-12
            // Email address
            label.lb-sm.control-label(for='client_email') Email
            .input-group
                span.input-group-addon
                    i.fa.fa-envelope.fa
                input#client_email.form-control(name='client_email', type='email', value=client.client_email)

    .row
        .form-group-sm.col-md-12
            // Terms Checkbox
            .checkbox
                label
                input(name='client_notifications', type='checkbox', value=client.client_notifications)
                |  Yes, send Email Notifications.

