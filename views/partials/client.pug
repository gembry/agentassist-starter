block content

form(method="post")
    input(type='hidden', name='_csrf', value=_csrf)
    input(type='hidden', name='_method', value=method)

    .row
        .form-group-sm.col-md-6
            // First Name
            label.lb-sm.control-label(for='client_firstname') First Name *
            input#client_firstname.form-control(name='client_firstname', type='text', required='required', value=client.client_firstname, autofocus='autofocus')
        .form-group-sm.col-md-6
            // Last Name
            label.lb-sm.control-label(for='client_lastname') Last Name *
            input#client_lastname.form-control(name='client_lastname', type='text', required='required', value=client.client_lastname)

    .wrapper
        .row
            .form-group-sm.col-md-12
                // Address
                label.lb-sm.control-label(for='client_address') Address *
                .input-group
                    span.input-group-addon
                        i.fa.fa-home.fa
                    input#client_address.form-control(name='client_address', type='text', required='required', placeholder='123 Sample Street, Unit B', value=client.client_address)
        .row
            .form-group-sm.col-md-4
                // City
                label.lb-sm.control-label(for='client_city') City *
                input#client_city.form-control(name='client_city', type='text', required='required', value=client.client_city)
            .form-group-sm.col-md-4
                // State
                label.lb-sm.control-label(for='client_state') State *
                select#client_state.selectpicker.form-control(name='client_state', type='select', required='required', title='Select', data-live-search='true', data-dropup-auto='false', data-size='3')
                    option(value='' selected=!client.client_state) Select
                    for state in states
                        option(value=state.option selected=state.option === client.client_state) #{state.value}
            .form-group-sm.col-md-4
                // ZIP Code
                label.lb-sm.control-label(for='client_zip') ZIP Code *
                input#client_zip.form-control(name='client_zip', type='text', required='required', value=client.client_zip)
    .row
        .form-group-sm.col-md-6
            // Cell Phone
            label.lb-sm.control-label(for='client_cellphone') Cell Phone #
            .input-group
                span.input-group-addon
                    i.fa.fa-phone.fa
                input#client_cellphone.form-control(name='client_cellphone', type='tel', value=client.client_cellphone, placeholder='(XXX) XXX-XXXX')
                
        .form-group-sm.col-md-6
            // Home Phone
            label.lb-sm.control-label(for='client_homephone') Home Phone #
            .input-group
                span.input-group-addon
                    i.fa.fa-phone.fa
                input#client_homephone.form-control(name='client_homephone', type='tel', value=client.client_homephone, placeholder='(XXX) XXX-XXXX')
    .row
        .form-group-sm.col-md-12
            // Email address
            label.lb-sm.control-label(for='client_email') Email
            .input-group
                span.input-group-addon
                    i.fa.fa-envelope.fa
                input#client_email.form-control(name='client_email', type='email', value=client.client_email)

    .row
        .form-group-sm.col-md-12
            // Terms Checkbox
            .checkbox
                label
                input(name='client_notifications', type="checkbox", checked=(client.client_notifications==='true' ? "checked" : undefined))
                |  Yes, send Email Notifications.

    .row
        .col-md-12
            br

    .row
        .form-group-sm.col-md-12
            // Submit button
            button.btn.btn-primary(name='client_submit', type='submit')
                i.fa.fa-hand-pointer-o
                | Submit

