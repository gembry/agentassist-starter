          .text-right(style='padding-top: 5px;') 
            //button.btn.btn-primary.btn-cons(type='button') Save Buyer Record
            // Submit button
            button.btn.btn-primary(name='buyer_submit', type='submit')
                i.fa.fa-hand-pointer-o
                | Save Buyer Record


          .tab-content
            #tabInformation.tab-pane.fade.active.in

              .row
                .col-sm-12
                  label.lb-sm(for='buyer_address') Address
                  input#buyer_address.form-control.input-sm(name='buyer_address', type='text', placeholder='123 Sample Street, Unit B', required, value='999 Halstead Avenue')
              .row
                .col-sm-12
                  label.lb-sm(for='buyer_city') City
                  input#buyer_city.form-control.input-sm(name='buyer_city', type='text', required, value='Barstow')
              .row
                .col-sm-8
                  label.lb-sm(for='buyer_state') State
                  select#buyer_state.form-control.input-sm(name='buyer_state]')
                    //option(hidden='true') 
                    option(value=1) Montana
                    option(value=2) Colorado
                .col-sm-4
                  label.lb-sm(for='buyer_zip') ZIP Code
                  input#buyer_zip.form-control.input-sm(name='buyer_zip', type='text', required, value='59901')

            #tabBuyer.tab-pane.fade

              .row
                .col-sm-12

                  input#buyers_search.flexdatalist(type='text', 
                                                    name='buyers_multiple',
                                                    placeholder='Search by first/last name or city...', 
                                                    multiple='multiple', 
                                                    data-data='buyers.json', 
                                                    data-search-in='["buyer_firstname","buyer_lastname", "buyer_city"]', 
                                                    data-visible-properties='["buyer_firstname", "buyer_lastname", "buyer_city"]', 
                                                    data-selection-required='true', 
                                                    data-value-property='_id', 
                                                    data-text-property='{buyer_firstname} {buyer_lastname} - {buyer_city}', 
                                                    data-min-length='1', 
                                                    data-remove-on-backspace='false',
                                                    data-focus-first-result='true',
                                                    style='width: 100%; border: 0px !important;')
                  input#buyers_result(type='hidden')

            #tabAdditional.tab-pane.fade

