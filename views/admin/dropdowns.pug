extends ../layout

block content
  .page-header
    h3= title

  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    input(type='hidden', name='_method', value=method)

    .form-group

      .col-sm-3
        label(class='control-label', for='optionname') Option Name
        select#optionname.form-control(name='optionname', type='select', required='required')
          option(hidden='true') 
          option(value='TITLECOMP', selected='TITLECOMP' === dropdown.optionname) Title Company
          option(value='MORTGLEND', selected='MORTGLEND' === dropdown.optionname) Mortgage Lender
          option(value='SELLAGENT', selected='SELLAGENT' === dropdown.optionname) Selling Agent
          option(value='SALESTYPE', selected='SALESTYPE' === dropdown.optionname) Sales Type
        
      .col-sm-8
        label(class='control-label', for='optionvalue') Option Value
        input#optionvalue.form-control(name='optionvalue', type='text', required='required', value=dropdown.optionvalue)

      .col-sm-1
        label(class='control-label') &nbsp;
        br
        button.btn.btn-primary(type='submit')
          i.fa.fa-floppy-o
          | Save

    div(class='container')
    table#dropdownsTable.table.table-striped.table-no-bordered(data-toggle='table', data-pagination='true', data-search='true', data-show-refresh='true', data-show-toggle='true', <='', body='', data-show-columns='true')

      thead
        tr 
          th(data-field='optionname', data-sortable='true') Option Name
          th(data-field='optionvalue', data-sortable='true') Option Value
          th(data-field='updatedAt', data-sortable='true') Updated
          th.text-center(data-field='Action', data-sortable='false') Action

      tbody
        each dropdown in dropdowns
          tr.small
            td 
              case dropdown.optionname
                when 'TITLECOMP'
                  | Title Company
                when 'MORTGLEND'
                  | Mortgage Lender
                when 'SELLAGENT'
                  | Selling Agent
                when 'SALESTYPE'
                  | Sales Type

            td= dropdown.optionvalue
            td #{moment(dropdown.updatedAt).format('MM/DD/YYYY')}
            td
              a(href='/admin/dropdowns/' + dropdown._id)= post
                button(type="button") Edit
              button(type="button", data-href='/admin/dropdown/' + dropdown._id, data-toggle='modal', data-target='#confirm-delete') Delete

      #confirm-delete.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-dialog
          .modal-content
            .modal-header.h4
              | Please confirm!
            .modal-body
              | You are about to delete this dropdown record.
            .modal-footer
              button.btn.btn-default(type='button', data-dismiss='modal') Cancel
              a.btn.btn-danger.btn-ok Delete